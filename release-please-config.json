{
  "separate-pull-requests": true,
  "always-update": true,
  "component-no-space": true,
  "versioning": "prerelease",
  "changelog-sections": [
    { "type": "feat", "section": "✨ Features" },
    { "type": "feat_py", "section": "✨ Features" },
    { "type": "feat_ts", "section": "✨ Features" },
    { "type": "fix", "section": "🐛 Bug Fixes" },
    { "type": "fix_py", "section": "🐛 Bug Fixes" },
    { "type": "fix_ts", "section": "🐛 Bug Fixes" },
    { "type": "refactor", "section": "🛠 Code Refactoring" },
    { "type": "refactor_py", "section": "🛠 Code Refactoring" },
    { "type": "refactor_ts", "section": "🛠 Code Refactoring" },
    { "type": "perf", "section": "🚀 Performance Improvements" },
    { "type": "docs", "section": "📚 Documentation" },
    { "type": "test", "section": "♻️ Tests" }
  ],
  "packages": {
    "go": {
      "release-type": "go",
      "label": "go"
    },
    "python/packages/liman_core": {
      "component": "liman_core_py",
      "pull-request-title-pattern": "release(${component}): ${version}",
      "release-type": "python",
      "release-as": "0.1.0-a1",
      "label": "python"
    },
    "python/packages/liman_finops": {
      "component": "liman_finops_py",
      "pull-request-title-pattern": "release(${component}): ${version}",
      "release-type": "python",
      "release-as": "0.1.0-a0",
      "label": "python"
    },
    "python/packages/liman_openapi": {
      "component": "liman_openapi_py",
      "pull-request-title-pattern": "release(${component}): ${version}",
      "release-type": "python",
      "release-as": "0.1.0-a0",
      "label": "python"
    },
    "typescript/packages/liman_core": {
      "component": "liman_core_ts",
      "pull-request-title-pattern": "release_ts(liman_core): ${version}",
      "release-type": "node",
      "label": "typescript"
    }
  }
}
